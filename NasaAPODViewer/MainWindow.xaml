<Window x:Class="NasaAPODViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NasaAPODViewer"
        mc:Ignorable="d"
        Title="NASA Daily Photo" Height="600" Width="800"
        Background="#2E2E2E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Background="#2E2E2E" Margin="0,10,0,0">
            <Label x:Name="TitleLabel" Content="NASA Daily Photo" 
                   HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" 
                   Foreground="White"/>
            <Label x:Name="DateLabel" Content="" 
                   HorizontalAlignment="Center" FontSize="12" 
                   Foreground="White"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#2E2E2E" Margin="10">
            <Image x:Name="ImageDisplay" Stretch="Uniform" 
                   MaxHeight="400" MaxWidth="600"/>
        </Border>

        <ScrollViewer Grid.Row="2" Margin="10" 
                      VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="ExplanationText" TextWrapping="Wrap" 
                     Background="#2E2E2E" Foreground="White"
                     IsReadOnly="True" BorderThickness="0"/>
        </ScrollViewer>

        <Button Grid.Row="3" x:Name="FetchButton" Content="Fetch Picture"
                Margin="0,10,0,5" Padding="10,5"
                Background="#4287f5" Foreground="Black"
                FontWeight="Bold" Click="FetchButton_Click"
                HorizontalAlignment="Center"/>

        <Button Grid.Row="4" x:Name="SaveButton" Content="Save Picture"
                Margin="0,0,0,10" Padding="10,5"
                Background="#4287f5" Foreground="Black"
                FontWeight="Bold" Click="SaveButton_Click"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>